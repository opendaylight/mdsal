<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0"
  odl:use-default-for-reference-types="true">

  <odl:clustered-app-config id="mdsalConfig"
                            binding-class="org.opendaylight.yang.gen.v1.urn.opendaylight.params.xml.ns.yang.mdsaltrace.rev160908.Config">
  </odl:clustered-app-config>

  <reference id="codec"
        interface="org.opendaylight.mdsal.binding.dom.codec.api.BindingNormalizedNodeSerializer"
        odl:type="default" />

  <reference id="realDefaultBroker"
      interface="org.opendaylight.controller.md.sal.dom.api.DOMDataBroker"
      odl:type="default" />

  <bean id="tracingDefaultBroker" class="org.opendaylight.mdsal.trace.dom.impl.TracingBroker">
      <argument ref="realDefaultBroker" />
      <argument ref="mdsalConfig" />
      <argument ref="codec" />
  </bean>

  <service id="tracingDefaultBrokerSvc" ref="tracingDefaultBroker" ranking="10" odl:type="default">
    <interfaces>
      <value>org.opendaylight.controller.md.sal.dom.api.DOMDataBroker</value>
      <value>org.opendaylight.mdsal.trace.dom.impl.TracingDOMDataBroker</value>
    </interfaces>
  </service>

  <!--
  <service id="explicitTracingDefaultBrokerSvc" ref="tracingDefaultBroker"
          interface="TracingDOMDataBroker"
          ranking="10" odl:type="default" />
          -->


  <bean id="tracingPingPongBroker" class="org.opendaylight.controller.md.sal.dom.broker.impl.PingPongDataBroker">
    <argument ref="tracingDefaultBroker" />
  </bean>

  <service id="tracingPingPongBrokerSvc" ref="tracingPingPongBroker"
             interface="org.opendaylight.controller.md.sal.dom.api.DOMDataBroker"
             ranking="10" odl:type="pingpong" />
</blueprint>
