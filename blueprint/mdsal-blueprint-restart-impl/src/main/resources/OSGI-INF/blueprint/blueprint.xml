<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <reference id="blueprintExtenderService" interface="org.apache.aries.blueprint.services.BlueprintExtenderService"/>
    <reference id="quiesceParticipant" interface="org.apache.aries.quiesce.participant.QuiesceParticipant"/>

    <bean id="restartService" class="org.opendaylight.mdsal.blueprint.restart.impl.BlueprintContainerRestartServiceImpl" destroy-method="close">
        <argument ref="blueprintExtenderService"/>
        <argument ref="quiesceParticipant"/>
    </bean>

    <service ref="restartService" interface="org.osgi.service.blueprint.container.BlueprintListener"/>
    <service ref="restartService" interface="org.opendaylight.mdsal.blueprint.restart.api.BlueprintContainerRestartService"/>
</blueprint>

